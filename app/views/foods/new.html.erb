<h1> Enter new food items here </h1>

<%= form_for @food do |f| %>
	<%= f.label :name %> <br>
  	<%= f.text_field :name %> <br>
	<br>
	<%= f.label :description %> <br>
  	<%= f.text_area :description %> <br>
  	<br>
  	
 	<%= f.select :menu, [['Breakfast','breakfast'],['Lunch','lunch'],['Dinner','dinner']] %>
 	<br>
 	<br>
  	<%= f.submit %>
<% end %>		