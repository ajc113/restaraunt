
<div class="page-header">
<h1> Enter new food items here </h1>
</div>

<div class="form-group">
<%= form_for @food do |f| %>
	<%= f.label :name %> <br>
  	<%= f.text_field :name %> <br>
	<br>
	<%= f.label :description %> <br>
  	<%= f.text_area :description %> <br>
  	<br>
	
</div>


<div class="dropdown">
	<br><%= fields_for :menus do |menus| %> 
		<%= menus.label :cost %> <br>
  		<%= menus.text_field :cost %> <br>
  	<br>	
 		<%= menus.select :meal_selection, [['Breakfast','breakfast'],['Lunch','lunch'],['Dinner','dinner']] %>
</div>
 	<br>
 	<br>
	
 <%= f.submit %>
<% end %>		


<% end %>
